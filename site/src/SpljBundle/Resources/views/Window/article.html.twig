{%extends "SpljBundle:Bloc:skeleton.html.twig"%}
{% block title %}Article{% endblock %}
{% block class %}article public-window{% endblock %}
{% block body %}
	<div class="col-lg-12 text-center">
		<h1>{{ article.title }}</h1>
		{% if article.image != null %}
			<figure>
				<img class="img-responsive" src="{{ asset('bundles/splj/img/articles/'~ article.image)}}" alt="">
			</figure>
		{% endif %}
	</div>
	<div class="col-lg-12">
		<p>{{ article.content }}</p>
	</div>
{% endblock %}
