{%extends "SpljBundle:Bloc:skeleton.html.twig"%}
{% block title %}Home{% endblock %}
{% block class %}public-window home{% endblock %}
{% block h1 %}nos derniers articles{% endblock %}
{% block body %}
<div class="row mtbox">
	<ul class="wrap-list">
	{% for article in articleHome %}
		{% if article.status == 1 and article.date > date('-40days') %}
			<div class="col-md-6 col-sm-6 mb">
				<li class="article white-panel pn donut-chart">
					<div class="white-header">
						<h3><a href="/home/article/{{ article.id }}">{{ article.title }}</a></h3>
					</div>
					<div class="text-left">
						<div class="infos">
							<span>publi√© le </span><date>{{ article.date|date('d/m/Y') }}</date><span> - par <span>{{ article.username }}</span></span>
						</div>
						<figure class="text-center">
							<a href="/home/article/{{ article.id }}">
								{% if article.image != null%}
									<img src="{{ asset('bundles/splj/img/articles/'~ article.image)}}">
								{% else %}
									<img src="{{ asset('bundles/splj/img/logo_60.jpg')}}">
								{% endif %}
							</a>
						</figure>
						<div>{{ article.extract }}<a href="/home/article/{{ article.id }}">...Lire la suite</a></div>
					</div>
				</li>
			</div>
		{% endif %}
	{% endfor %}
	</ul>
</div>
{% endblock %}
	          	


