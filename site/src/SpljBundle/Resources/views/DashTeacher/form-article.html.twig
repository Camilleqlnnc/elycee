{%extends "SpljBundle:Bloc:skeleton.html.twig"%}
{% block title %}Nouvel Article{% endblock %}
{% block class %}dashboard crud-article{% endblock %}
{% block h1 %}créer un article{% endblock %}
{% block body %}
<form class="form-horizontal style-form" action="{{ path('splj.dashTeacher.create-article') }}" method="POST" {{ form_enctype(form) }} novalidate>
    <div class="form-group">
        <div class="col-sm-10">
            {{ form_widget(form.user_id, {'value' : 1},
                { 'attr' : { 'class' : 'form-control' }}
                 )
            }}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 col-sm-2 control-label">{{ form_label(form.title, "Titre")}}</label>
        <div class="col-sm-10">
            {{ form_widget(form.title,
                { 'attr' : { 'class' : 'form-control' } } )
            }}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 col-sm-2 control-label">{{ form_label(form.date, "date")}}</label>
        <div class="col-sm-10">
            {{ form_widget(form.date)}}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 col-sm-2 control-label">{{ form_label(form.content, "Contenu")}}</label>
        <div class="col-sm-10">
            {{ form_widget(form.content, 
                { 'attr' : { 'class' : 'form-control' } } )
            }}
        </div>
    </div>
     <div class="form-group">
        <label class="col-sm-2 col-sm-2 control-label">{{ form_label(form.extract, "Extrait")}}</label>
        <div class="col-sm-10">
            {{ form_widget(form.extract, 
                { 'attr' : { 'class' : 'form-control' } } )
            }}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 col-sm-2 control-label">{{ form_label(form.image, "Illustration")}}</label>
        <div class="col-sm-10">
            {{ form_widget(form.image, 
                { 'attr' : { 'class' : 'form-control' } } )
            }}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 col-sm-2 control-label">{{ form_label(form.status, "Statut")}}</label>
        <div class="col-sm-10">
            {{ form_widget(form.status, 
                { 'attr' : { 'class' : 'form-control' } } )
            }}
        </div>
    </div>
    <div class="wrap-submit">
        <input type="submit" class="btn btn-theme" value="créer" /> 
    </div>
</form>
{% endblock %}